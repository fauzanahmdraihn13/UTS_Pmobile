<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:src="@mipmap/ic_logopti"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="MOBILE LEARNING"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:textAlignment="center"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Algoritma dan Pemrograman"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/tombol_tujuan_pembelajaran"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tujuan Pembelajaran"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>
        <Button
            android:id="@+id/tombol_pertanyaan_pemantik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pertanyaan Pemantik"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>
        <Button
            android:id="@+id/tombol_peta_konsep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Peta Konsep"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>
        <Button
            android:id="@+id/tombol_apersepsi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Apersepsi"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>
        <Button
            android:id="@+id/tombol_kata_kunci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kata Kunci"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>
        <Button
            android:id="@+id/tombol_materi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Materi"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>
        <Button
            android:id="@+id/tombol_tentang_aplikasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tentang Aplikasi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#00bfff"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/margin_bottom"/>

    </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>